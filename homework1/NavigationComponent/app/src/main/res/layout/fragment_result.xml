<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround4"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.ResultFragment">


    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#BD79C8"
        android:text="Done"
        android:textColor="#3F0849"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDepartment"
        app:layout_constraintVertical_bias="0.5">

    </Button>

    <TextView
        android:id="@+id/textViewNameAndSurname3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="text View"
        android:textAlignment="center"
        android:textColor="#BD79C8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPhoneNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="48dp" />


    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="text View"
        android:textAlignment="center"
        android:textColor="#BD79C8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPhoneNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/textViewDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="text View"
        android:textAlignment="center"
        android:textColor="#BD79C8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDone"
        app:layout_constraintTop_toBottomOf="@+id/textViewSchool"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textViewSchool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="text View"
        android:textAlignment="center"
        android:textColor="#BD79C8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewDepartment"
        app:layout_constraintTop_toBottomOf="@+id/textViewHometown"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textViewHometown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="text View"
        android:textAlignment="center"
        android:textColor="#BD79C8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSchool"
        app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNumber"
        tools:layout_editor_absoluteX="32dp" />

    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:text="text View"
        android:textAlignment="center"
        android:textColor="#BD79C8"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewHometown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>